// References used in configs & process

params {
    // Defaults
    pubDirMode              = "copy"

    // Input Manager
    hostGenome              = "/input/reference/U00096-3.fasta"
    phageGenome             = "/input/reference/NC_000866-4.fasta"
    hostGFF                 = "/input/reference/U00096-3.gff3"
    phageGFF                = "/input/reference/NC_000866-4.gff3"

    pairedEnd               = false //if calling --pairedEnd, read pairs will be collected
    dRNAseq                 = false //if calling --dRNAseq, dRNA-seq-specific processing will be applied

    reads                   = "/input/reads/SRR21013140.fastq.gz"
    outputDir               = "/output"
    inputDir                = "/input"

    adapter1                = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCA"
    adapter2                = "AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT"

    countFeature            = "gene"
    featureIdentifier       = "ID"
}